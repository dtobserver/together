{
    "nodeModulesDir": "auto",
    "tasks": {
        "dev": "deno run --no-check --allow-net --allow-read --allow-write --allow-env --unstable-kv --watch www/dev.ts",
        "build": "deno run --no-check --allow-net --allow-read --allow-write --allow-env --allow-run --unstable-kv www/build.ts",
        "server:dev": "deno run --no-check --allow-net --allow-read --allow-write --allow-env --unstable-kv --watch server/server.ts",
        "server:start": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv server/server.ts",
        "full:dev": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv --watch server/server.ts",
        "full:build": "deno task build && deno task server:start",
        "test": "deno test --allow-all --unstable-kv tests/",
        "fmt": "deno fmt",
        "lint": "deno lint"
    },
    "imports": {
        "react": "npm:react@^18.2.0",
        "react-dom": "npm:react-dom@^18.2.0",
        "react-router-dom": "npm:react-router-dom@^6.8.0",
        "zustand": "npm:zustand@^4.4.0",
        "esbuild": "npm:esbuild@^0.19.0",
        "oak": "https://deno.land/x/oak@v12.6.1/mod.ts",
        "oak/cors": "https://deno.land/x/cors@v1.2.2/mod.ts",
        "std/dotenv": "https://deno.land/std@0.200.0/dotenv/mod.ts",
        "std/uuid": "https://deno.land/std@0.200.0/uuid/mod.ts",
        "std/path": "https://deno.land/std@0.200.0/path/mod.ts",
        "std/fs": "https://deno.land/std@0.200.0/fs/mod.ts",
        "zod": "https://esm.sh/zod@3.22.4",
        "@trpc/server": "https://esm.sh/@trpc/server@10.45.0",
        "@trpc/client": "https://esm.sh/@trpc/client@10.45.0"
    },
    "compilerOptions": {
        "lib": [
            "deno.window",
            "deno.unstable",
            "dom",
            "dom.asynciterable"
        ],
        "strict": true,
        "jsx": "react-jsx",
        "jsxImportSource": "react"
    },
    "fmt": {
        "files": {
            "include": [
                "./"
            ]
        },
        "options": {
            "useTabs": false,
            "lineWidth": 100,
            "indentWidth": 2,
            "singleQuote": true
        }
    },
    "lint": {
        "exclude": [
            "dist/",
            "build/"
        ]
    }
}