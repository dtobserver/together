---
import Layout from '../../layouts/Layout.astro';
const { roomId } = Astro.params;
---

<Layout title={`Room ${roomId}`}>
  <main class="min-h-screen flex flex-col items-center justify-center p-4">
    <h1 class="text-3xl font-bold mb-4">Room {roomId}</h1>
    <p id="user-info" class="text-gray-600"></p>
  </main>

  <script type="module">
    const data = localStorage.getItem('syncwatch-user');
    if (data) {
      const { username } = JSON.parse(data);
      const info = document.getElementById('user-info');
      if (info) info.textContent = `You are ${username}`;
    }
  </script>
</Layout>
