---
import Layout from '../layouts/Layout.astro';
---

<Layout title="SyncWatch - Watch Together">
  <main class="min-h-screen flex items-center justify-center py-12 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <div class="mb-8">
        <h1 class="text-5xl font-bold text-gray-900 mb-4">
          <span class="text-blue-600">Sync</span>Watch
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Watch YouTube videos together with friends in real-time
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-2xl mx-auto">
        <!-- Create Room Card -->
        <div class="card">
          <div class="mb-4">
            <h2 class="text-2xl font-semibold text-gray-900 mb-2">
              Create Room
            </h2>
            <p class="text-gray-600">
              Start a new room and invite friends to watch together
            </p>
          </div>
          
          <form id="create-room-form" class="space-y-4">
            <div>
              <label for="room-name" class="block text-sm font-medium text-gray-700 mb-1">
                Room Name
              </label>
              <input 
                type="text" 
                id="room-name" 
                name="roomName"
                placeholder="My Awesome Room"
                class="input-field"
                required
              />
            </div>
            
            <div>
              <label for="username-create" class="block text-sm font-medium text-gray-700 mb-1">
                Your Name
              </label>
              <input 
                type="text" 
                id="username-create" 
                name="username"
                placeholder="Enter your name"
                class="input-field"
                required
              />
            </div>
            
            <button type="submit" class="btn-primary w-full">
              Create Room
            </button>
          </form>
        </div>

        <!-- Join Room Card -->
        <div class="card">
          <div class="mb-4">
            <h2 class="text-2xl font-semibold text-gray-900 mb-2">
              Join Room
            </h2>
            <p class="text-gray-600">
              Enter a room ID to join an existing room
            </p>
          </div>
          
          <form id="join-room-form" class="space-y-4">
            <div>
              <label for="room-id" class="block text-sm font-medium text-gray-700 mb-1">
                Room ID
              </label>
              <input 
                type="text" 
                id="room-id" 
                name="roomId"
                placeholder="Enter room ID"
                class="input-field"
                required
              />
            </div>
            
            <div>
              <label for="username-join" class="block text-sm font-medium text-gray-700 mb-1">
                Your Name
              </label>
              <input 
                type="text" 
                id="username-join" 
                name="username"
                placeholder="Enter your name"
                class="input-field"
                required
              />
            </div>
            
            <button type="submit" class="btn-secondary w-full">
              Join Room
            </button>
          </form>
        </div>
      </div>

      <!-- Features Section -->
      <div class="mt-16">
        <h3 class="text-2xl font-semibold text-gray-900 mb-8">
          Features
        </h3>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293H15M9 10v4a1 1 0 001 1h4M9 10V9a1 1 0 011-1h4a1 1 0 011 1v1M9 15v1a1 1 0 001 1h4a1 1 0 001-1v-1"></path>
              </svg>
            </div>
            <h4 class="font-semibold text-gray-900 mb-2">Real-time Sync</h4>
            <p class="text-gray-600">Watch videos in perfect sync with your friends</p>
          </div>
          
          <div class="text-center">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <h4 class="font-semibold text-gray-900 mb-2">Live Chat</h4>
            <p class="text-gray-600">Chat with friends while watching videos</p>
          </div>
          
          <div class="text-center">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
              </svg>
            </div>
            <h4 class="font-semibold text-gray-900 mb-2">Video Queue</h4>
            <p class="text-gray-600">Create playlists and manage what to watch next</p>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script type="module">
    import { roomAPI } from '../services/api';

    // Basic form handling - will be enhanced with React components later
    document.getElementById('create-room-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target as HTMLFormElement);
      const roomName = formData.get('roomName') as string;
      const username = formData.get('username') as string;

      try {
        const res = await roomAPI.createRoom(roomName, username);
        if (res.success && res.data) {
          const { room_id, user_id } = res.data;
          localStorage.setItem(
            'syncwatch-user',
            JSON.stringify({ roomId: room_id, userId: user_id, username })
          );
          window.location.href = `/room/${room_id}`;
        } else {
          alert(res.error || 'Failed to create room');
        }
      } catch (err) {
        console.error('Create room error', err);
        alert('Failed to create room');
      }
    });

    document.getElementById('join-room-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target as HTMLFormElement);
      const roomId = formData.get('roomId') as string;
      const username = formData.get('username') as string;

      console.log('Joining room:', { roomId, username });
      alert('Room joining will be implemented in Phase 2');
    });
  </script>
</Layout>
